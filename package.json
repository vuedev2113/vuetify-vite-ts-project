{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "vite-vuetify-ts-starter",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "prettier --check src && eslint --cache src --ext js,json,ts,vue",
    "lint:style": "stylelint --cache src/**/*.{css,scss,vue}",
    "serve": "vite preview",
    "prepare": "husky install"
  },
  "dependencies": {
    "@mdi/font": "6.5.95",
    "roboto-fontface": "*",
    "vue": "^3.2.16",
    "vue-class-component": "^8.0.0-rc.1",
    "vue-router": "^4.0.12",
    "vuetify": "^3.0.0-alpha.0",
    "vuex": "^4.0.2",
    "vuex-persist": "^3.1.3",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "@amatlash/vite-plugin-stylelint": "^1.2.0",
    "@types/webfontloader": "^1.6.33",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vitejs/plugin-vue": "^1.10.1",
    "@vue/compiler-sfc": "^3.2.23",
    "@vue/eslint-config-typescript": "^9.1.0",
    "@vuetify/vite-plugin": "^1.0.0-alpha.9",
    "eslint": "^8.3.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier-vue": "^3.1.0",
    "eslint-plugin-vue": "^8.1.1",
    "eslint-plugin-vuejs-accessibility": "^1.1.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "postcss-html": "^1.3.0",
    "prettier": "^2.5.0",
    "sass": "^1.43.5",
    "stylelint": "^14.1.0",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-config-recommended-vue": "^1.0.0",
    "stylelint-config-standard": "^24.0.0",
    "typescript": "^4.5.2",
    "vite": "^2.6.14",
    "vite-plugin-eslint": "^1.3.0",
    "vue-eslint-parser": "^8.0.1",
    "vue-tsc": "^0.29.6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.vue": [
      "prettier --write",
      "eslint --fix",
      "stylelint --fix"
    ],
    "*.{js,ts,json}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,scss}": [
      "prettier --write",
      "stylelint --fix"
    ]
  }
}
