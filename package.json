{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "vite-vuetify-ts-starter",
  "private": true,
  "version": "0.2.5",
  "description": "Vue3 Vuetify TypeScript Startar project for Vite.",
  "author": {
    "name": "Logue",
    "email": "logue@hotmail.co.jp",
    "url": "https://logue.dev/"
  },
  "homepage": "https://github.com/logue/vite-vuetify-ts-starter",
  "repository": {
    "type": "git",
    "url": "git@github.com:logue/vite-vuetify-ts-starter.git"
  },
  "bugs": {
    "url": "https://github.com/logue/vite-vuetify-ts-starter/issues"
  },
  "engines": {
    "node": ">=16.15.0",
    "yarn": "^1.22.18"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "clean": "rimraf ./node_modules/.vite",
    "lint": "eslint . --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint && prettier . -w -u",
    "lint:style": "stylelint \"./**/*.{css,sass,scss,htm,html,vue}\" --fix --cache-location ./node_modules/.vite/vite-plugin-stylelint",
    "lint:markup": "vue-tsc --noEmit",
    "build": "vue-tsc --noEmit && vite build",
    "build:analyze": "vue-tsc --noEmit && vite build --mode analyze",
    "build:clean": "rimraf dist",
    "preview": "vite preview",
    "prepare": "husky install"
  },
  "dependencies": {
    "@mdi/font": "6.6.96",
    "pinia": "^2.0.14",
    "pinia-plugin-persistedstate": "^1.5.1",
    "vue": "^3.2.33",
    "vue-router": "^4.0.15",
    "vuetify": "^3.0.0-beta.1",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "@modyqyw/vite-plugin-eslint": "^1.3.2",
    "@types/eslint": "^8.4.2",
    "@types/node": "^17.0.32",
    "@types/webfontloader": "^1.6.34",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vuetify/vite-plugin": "^1.0.0-alpha.10",
    "eslint": "^8.15.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-prettier-vue": "^3.1.0",
    "eslint-plugin-tsdoc": "^0.2.16",
    "eslint-plugin-vue": "^8.7.1",
    "eslint-plugin-vuejs-accessibility": "^1.1.1",
    "eslint-plugin-yaml": "^0.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "postcss-html": "^1.4.1",
    "prettier": "^2.6.2",
    "prettier-plugin-jsdoc": "^0.3.38",
    "prettier-plugin-md-nocjsp": "^1.2.0",
    "prettier-plugin-sort-imports": "^1.6.0",
    "rimraf": "^3.0.2",
    "rollup-plugin-visualizer": "^5.6.0",
    "sass": "^1.51.0",
    "stylelint": "^14.8.2",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-scss": "^6.0.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "typescript": "^4.6.4",
    "vite": "^2.9.9",
    "vite-plugin-stylelint": "^2.2.2",
    "vue-eslint-parser": "^8.3.0",
    "vue-tsc": "^0.34.12"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.vue": "vue-tsc --noEmit",
    "*.{js,ts,json,yml,yaml,vue,htm,html,md}": "eslint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint",
    "*.{css,sass,scss,vue,htm,html}": "stylelint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-stylelint",
    "*": "prettier -w -u"
  }
}
