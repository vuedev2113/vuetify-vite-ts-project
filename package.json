{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "vite-vuetify-ts-starter",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "vite",
    "clean": "rimraf ./node_modules/.vite",
    "build": "vite build",
    "build:clean": "rimraf dist",
    "lint": "eslint . --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint && prettier . --write",
    "lint:style": "stylelint \"./**/*.{css,sass,scss,htm,html,vue}\" --fix --cache-location ./node_modules/.vite/vite-plugin-stylelint",
    "lint:markup": "vue-tsc --noEmit",
    "preview": "vite preview",
    "prepare": "husky install"
  },
  "dependencies": {
    "@mdi/font": "6.5.95",
    "pinia": "^2.0.11",
    "pinia-plugin-persistedstate": "^1.2.3",
    "vue": "^3.2.31",
    "vue-class-component": "^8.0.0-rc.1",
    "vue-property-decorator": "^10.0.0-rc.3",
    "vue-router": "^4.0.13",
    "vuetify": "^3.0.0-alpha.13",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "@types/node": "^17.0.21",
    "@types/webfontloader": "^1.6.34",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "@vitejs/plugin-vue": "^2.2.4",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vuetify/vite-plugin": "^1.0.0-alpha.10",
    "eslint": "^8.10.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-prettier-vue": "^3.1.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "eslint-plugin-vue": "^8.5.0",
    "eslint-plugin-vuejs-accessibility": "^1.1.1",
    "eslint-plugin-vuetify": "^1.1.0",
    "eslint-plugin-yaml": "^0.5.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.4",
    "postcss-html": "^1.3.0",
    "prettier": "^2.5.1",
    "prettier-plugin-jsdoc": "^0.3.30",
    "prettier-plugin-md-nocjsp": "^1.2.0",
    "prettier-plugin-sort-imports": "^1.6.0",
    "rimraf": "^3.0.2",
    "sass": "^1.49.9",
    "stylelint": "^14.5.3",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-scss": "^5.0.2",
    "stylelint-config-recommended-vue": "^1.3.0",
    "stylelint-order": "^5.0.0",
    "stylelint-prettier": "^2.0.0",
    "typescript": ">=3.3.1 <4.6.0",
    "vite": "^2.8.6",
    "vite-plugin-eslint": "^1.3.0",
    "vite-plugin-stylelint": "^1.2.0",
    "vue-eslint-parser": "^8.3.0",
    "vue-tsc": "^0.32.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{vue,htm,html,js,ts,json,yml,yaml}": "eslint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint",
    "*.{vue,htm,html,css,sass,scss}": "stylelint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-stylelint",
    "*": "prettier -w -u"
  }
}
